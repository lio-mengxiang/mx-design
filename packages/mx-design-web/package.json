{
  "name": "@mx-design/web",
  "version": "0.1.6",
  "description": "mxDesign Component for React",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "typings": "types/index.d.ts",
  "license": "MIT",
  "files": [
    "esm",
    "lib",
    "types",
    "README.md",
    "README.zh.md"
  ],
  "sideEffects": [
    "dist/*",
    "site/*",
    "es/**/style/**",
    "esm/**/style/**",
    "*.less"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  },
  "scripts": {
    "clean": "rimraf ./node_modules",
    "build:types": "rimraf types && tsc -d --emitDeclarationOnly",
    "build:es": "rimraf esm && mx buildLib --mode esm --copy-less --less-2-css",
    "build:cjs": "rimraf lib && mx buildLib --mode cjs --copy-less --less-2-css",
    "build:umd": "rimraf dist && mx buildLib --mode umd --entry src/Style/entry.ts,src/index.ts --output-name mx-design",
    "build": "pnpm run build:types && pnpm run build:cjs && pnpm run build:es && pnpm run build:umd"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@mx-design/web-utils": "0.1.4",
    "@mx-design/node-utils": "0.1.3",
    "@mx-design/hooks": "0.1.1",
    "@babel/runtime": "7.20.6",
    "framer-motion": "10.12.4",
    "react-fast-compare": "3.2.1",
    "dayjs": "1.11.7",
    "react-focus-lock": "^2.8.1",
    "resize-observer-polyfill": "1.5.1"
  },
  "devDependencies": {
    "@types/node": "18.11.12",
    "rimraf": "3.0.2",
    "typescript": "4.9.3",
    "vitest": "0.25.3",
    "jsdom": "20.0.3"
  }
}